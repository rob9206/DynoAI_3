# DynoAI Staging Environment Configuration
# Copy to .env and customize for staging/testing deployment

# =============================================================================
# Server Configuration
# =============================================================================
DYNOAI_HOST=0.0.0.0
DYNOAI_PORT=5001
DYNOAI_DEBUG=true  # Enable debug mode for staging
FLASK_ENV=development

# =============================================================================
# Logging Configuration  
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=development  # Colorized output for easier debugging

# =============================================================================
# Security & Authentication
# =============================================================================
# Optional for staging - useful for testing auth flows
API_AUTH_ENABLED=false
API_KEYS=dynoai_staging_key_12345
API_KEYS_FILE=

# Not critical for staging but still recommended
SECRET_KEY=staging_secret_key_not_for_production

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=1000/minute  # More lenient for testing
RATE_LIMIT_EXPENSIVE=50/minute;200/hour
RATE_LIMIT_STORAGE=memory://

# =============================================================================
# Storage Configuration
# =============================================================================
DYNOAI_UPLOAD_DIR=uploads
DYNOAI_OUTPUT_DIR=outputs
DYNOAI_RUNS_DIR=runs
DYNOAI_MAX_UPLOAD_MB=100  # Larger for testing

# =============================================================================
# CORS Configuration
# =============================================================================
# Allow all for staging
DYNOAI_CORS_ORIGINS=*

# =============================================================================
# Database
# =============================================================================
# SQLite is fine for staging
DATABASE_URL=sqlite:///dynoai_staging.db

# =============================================================================
# Jetstream Integration
# =============================================================================
JETSTREAM_ENABLED=true
JETSTREAM_STUB_MODE=true  # Use stub mode for staging
JETSTREAM_API_URL=
JETSTREAM_API_KEY=
JETSTREAM_POLL_INTERVAL=10  # More frequent for testing
JETSTREAM_AUTO_PROCESS=true

# =============================================================================
# JetDrive Hardware
# =============================================================================
JETDRIVE_MCAST_GROUP=224.0.2.10
JETDRIVE_PORT=22344
JETDRIVE_IFACE=0.0.0.0
JETDRIVE_TIMEOUT=5

# =============================================================================
# xAI (Grok) Integration
# =============================================================================
XAI_ENABLED=false
XAI_API_KEY=
XAI_API_URL=https://api.x.ai/v1/chat/completions
XAI_MODEL=grok-beta

# =============================================================================
# Metrics & Monitoring
# =============================================================================
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_METRICS_PORT=9090

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_VIRTUAL_ECU=true
FEATURE_CLOSED_LOOP=true
FEATURE_AUDIO_ENGINE=true
FEATURE_SESSION_REPLAY=true

# =============================================================================
# Performance Tuning
# =============================================================================
WORKERS=2
THREADS=2
MAX_CONTENT_LENGTH=104857600  # 100MB
