# DynoAI Environment Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Flask server host (default: 0.0.0.0)
DYNOAI_HOST=0.0.0.0

# Flask server port (default: 5001)
DYNOAI_PORT=5001

# Enable debug mode (default: true for development)
DYNOAI_DEBUG=true

# CORS allowed origins (comma-separated, default: *)
DYNOAI_CORS_ORIGINS=*

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Directory for uploaded files
DYNOAI_UPLOAD_DIR=uploads

# Directory for analysis output files
DYNOAI_OUTPUT_DIR=outputs

# Directory for run data and state
DYNOAI_RUNS_DIR=runs

# Maximum upload file size in MB (default: 50)
DYNOAI_MAX_UPLOAD_MB=50

# =============================================================================
# ANALYSIS DEFAULTS
# =============================================================================

# Default smoothing passes (default: 2)
DYNOAI_SMOOTH_PASSES=2

# Default clamp value (default: 15.0)
DYNOAI_CLAMP=15.0

# Default rear cylinder bias (default: 0.0)
DYNOAI_REAR_BIAS=0.0

# Default rear rule degrees (default: 2.0)
DYNOAI_REAR_RULE_DEG=2.0

# Default hot extra timing (default: -1.0)
DYNOAI_HOT_EXTRA=-1.0

# =============================================================================
# JETSTREAM INTEGRATION
# =============================================================================

# Enable Jetstream integration (default: false)
JETSTREAM_ENABLED=false

# Jetstream API endpoint URL
JETSTREAM_API_URL=

# Jetstream API key (keep secret!)
JETSTREAM_API_KEY=

# Polling interval in seconds (default: 30)
JETSTREAM_POLL_INTERVAL=30

# Auto-process new runs from Jetstream (default: true)
JETSTREAM_AUTO_PROCESS=true

# Enable stub mode for testing without real Jetstream (default: false)
JETSTREAM_STUB_MODE=false

# =============================================================================
# XAI (GROK) INTEGRATION
# =============================================================================

# Enable xAI/Grok chat integration (default: false)
XAI_ENABLED=false

# xAI API key (keep secret!)
XAI_API_KEY=

# xAI API endpoint (default: https://api.x.ai/v1/chat/completions)
XAI_API_URL=https://api.x.ai/v1/chat/completions

# xAI model to use (default: grok-beta)
XAI_MODEL=grok-beta
