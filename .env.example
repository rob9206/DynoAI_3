# DynoAI Environment Configuration
# Copy this file to .env and customize for your environment
# Never commit .env to version control!

# =============================================================================
# Server Configuration
# =============================================================================
DYNOAI_HOST=0.0.0.0
DYNOAI_PORT=5001
DYNOAI_DEBUG=false
FLASK_ENV=production

# =============================================================================
# Logging Configuration  
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=production  # "development" (colorized) or "production" (JSON)

# =============================================================================
# Security & Authentication
# =============================================================================
# API Authentication (optional - recommended for production)
API_AUTH_ENABLED=false
API_KEYS=
API_KEYS_FILE=

# Secret key for sessions (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_EXPENSIVE=5/minute;20/hour
RATE_LIMIT_STORAGE=memory://  # Use redis://localhost:6379 for distributed deployments

# =============================================================================
# Storage Configuration
# =============================================================================
DYNOAI_UPLOAD_DIR=uploads
DYNOAI_OUTPUT_DIR=outputs
DYNOAI_RUNS_DIR=runs
DYNOAI_MAX_UPLOAD_MB=50

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins (* allows all - restrict in production)
DYNOAI_CORS_ORIGINS=*

# =============================================================================
# Database (Optional - for session persistence)
# =============================================================================
DATABASE_URL=sqlite:///dynoai.db
# For PostgreSQL: postgresql://user:password@localhost:5432/dynoai
# For MySQL: mysql://user:password@localhost:3306/dynoai

# =============================================================================
# Jetstream Integration (Dynojet Cloud)
# =============================================================================
JETSTREAM_ENABLED=false
JETSTREAM_STUB_MODE=true
JETSTREAM_API_URL=
JETSTREAM_API_KEY=
JETSTREAM_POLL_INTERVAL=30
JETSTREAM_AUTO_PROCESS=true

# =============================================================================
# JetDrive Hardware (Local Dynojet Integration)
# =============================================================================
JETDRIVE_MCAST_GROUP=224.0.2.10
JETDRIVE_PORT=22344
# Bind multicast to this interface. Use 0.0.0.0 to try all interfaces.
# When Dynoware RT is on WiFi: set to your PC's WiFi IP (same subnet as dyno)
# so discovery and live data use the correct adapter (e.g. 192.168.1.100).
JETDRIVE_IFACE=0.0.0.0
JETDRIVE_TIMEOUT=5
# Optional: Dynoware RT IP for connectivity checks / scripts (e.g. Dyno Connect)
# DYNO_IP=192.168.1.115

# =============================================================================
# xAI (Grok) Integration
# =============================================================================
XAI_ENABLED=false
XAI_API_KEY=
XAI_API_URL=https://api.x.ai/v1/chat/completions
XAI_MODEL=grok-beta

# =============================================================================
# Metrics & Monitoring
# =============================================================================
PROMETHEUS_METRICS_ENABLED=false
PROMETHEUS_METRICS_PORT=9090

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_VIRTUAL_ECU=true
FEATURE_CLOSED_LOOP=true
FEATURE_AUDIO_ENGINE=true
FEATURE_SESSION_REPLAY=true

# =============================================================================
# Performance Tuning
# =============================================================================
WORKERS=4  # Number of Flask workers (for production WSGI)
THREADS=2  # Threads per worker
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
